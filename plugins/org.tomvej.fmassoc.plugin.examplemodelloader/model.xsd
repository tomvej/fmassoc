<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://fmassoc.tomvej.org/plugins/examplemodelloader"
	xmlns:fm="http://fmassoc.tomvej.org/plugins/examplemodelloader"
	elementFormDefault="qualified">
	<xs:element name="datamodel">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="table" type="fm:table" minOccurs="0"
					maxOccurs="unbounded" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:complexType name="table">
		<xs:sequence>
			<xs:element name="property" type="fm:property" minOccurs="0"
				maxOccurs="unbounded" />
			<xs:element name="association" type="fm:association"
				minOccurs="0" maxOccurs="unbounded" />
		</xs:sequence>
		<xs:attribute name="name" type="xs:token" use="required"/>
		<xs:attribute name="forbidden" type="xs:boolean" default="false"/>
	</xs:complexType>

	<xs:complexType name="property">
		<xs:attribute name="name" type="xs:token" use="required"/>
	</xs:complexType>

	<xs:complexType name="association">
		<xs:attribute name="name" type="xs:token" use="required"/>
		<xs:attribute name="reverse" type="xs:token" use="required"/>
		<xs:attribute name="table" type="xs:token" use="required"/>
		<xs:attribute name="mandatory" type="xs:boolean" default="false"/>
		<xs:attribute name="unique" type="xs:boolean" default="false"/><!-- marks 1:1 associations -->
	</xs:complexType>
</xs:schema>